<div class="form-group">
    <label for="title" style="color: darkgray; margin: 10px;margin-left: 0px;">Title</label>
    <input required value="<%=article.title%>" type="text" name="title" class="form-control">
</div>
<div class="form-group">
    <label for="description" style="color: darkgray;margin: 10px;margin-left: 0px">Description</label>
    <textarea name="description" id="description" class="form-control"><%=article.description%></textarea>
</div>
<div class="form-group">
    <label for="markdown" style="color: darkgray;margin: 10px;margin-left: 0px">Author</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%=article.markdown%></textarea>
</div>
<br>
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>